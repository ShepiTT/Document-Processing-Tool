{
    "project": {
        "name": "医疗器械文档处理工具集",
        "name_en": "Medical Device Document Processor",
        "version": "1.0.0",
        "build_date": "2024-09-24",
        "description": "集成了多种医疗器械文档处理功能的综合工具，支持ZIP解压、文件夹清理、文件夹提取、Word转PDF和文件重命名等操作"
    },
    "modules": {
        "main_gui": {
            "name": "主程序界面",
            "version": "1.0.0",
            "description": "基于Tkinter的图形用户界面，支持自动化流程和单独功能执行"
        },
        "analyze_zip_encoding": {
            "name": "ZIP文件解压",
            "version": "1.0.0",
            "description": "自动解压ZIP文件，正确处理中文编码问题"
        },
        "clean_folder": {
            "name": "文件夹清理",
            "version": "1.0.0",
            "description": "清理文件夹，只保留材料包文件夹，删除临时文件"
        },
        "extract_folders": {
            "name": "文件夹提取",
            "version": "1.0.0",
            "description": "根据JSON模板提取指定文件夹到output目录"
        },
        "final_word_to_pdf": {
            "name": "Word转PDF",
            "version": "1.0.0",
            "description": "批量转换Word文件为PDF格式，支持.doc和.docx"
        },
        "universal_rename": {
            "name": "文件重命名",
            "version": "1.0.0",
            "description": "根据模板为文件添加标识标签，支持多种文件类型识别"
        }
    },
    "dependencies": {
        "python": ">=3.7",
        "tkinter": "built-in",
        "pywin32": ">=227",
        "pathlib2": ">=2.3.0",
        "pyinstaller": ">=4.10"
    },
    "features": {
        "gui_interface": "现代化Tkinter图形界面",
